<Window x:Class="kinectKata.MessageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Kinect Kata - You finish" Height="250" Width="667" WindowStartupLocation="CenterOwner">
    <Grid Margin="0,0,10,21">
        <TextBlock Text="Congratulations, you've just completed the 31 Jo Kata positions." HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0" FontSize="20"/>
        <TextBlock Text="You can restart your training or quit." HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,59,0,0" FontSize="18"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,97,0,0">
            <Button Content="Leave" Width="100" Height="30" Margin="10" Click="Leave_Click"/>
            <Button Content="Restart" Width="100" Height="30" Margin="10" Click="Restart_Click"/>
        </StackPanel>
    </Grid>
</Window>
